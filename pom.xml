<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
>
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.s4i</groupId>
    <artifactId>maven-parent</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>
    <name>maven-parent</name>
    <description>The common parent pom</description>

    <modules>
		<module>eclipse-plugin</module>
	</modules>
    
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
    
    <repositories>
        <repository>
            <id>eclipseCentral</id>
            <name>Eclipse in Maven Central</name>
            <layout>default</layout>
            <url>http://repo1.maven.org/eclipse</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
    <build>
        <plugins>
            <!--
                Used to generate eclipse .project and .classpath
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-eclipse-plugin</artifactId>
                <version>2.9</version>
                <configuration>
                    <!--
                        Generate javadoc and source for eclipse
                    -->
                    <downloadSources>true</downloadSources>
                    <downloadJavadocs>true</downloadJavadocs>
                    
                    <!--
                        Enable support for eclipse PDE
                        http://maven.apache.org/plugins/maven-eclipse-plugin/pde.html
                    -->
                    <pde>true</pde>
                    
                    <!--
                        Add missing eclipse classpath entries
                    -->
                    <classpathContainers>
                        <classpathContainer>org.eclipse.jdt.launching.JRE_CONTAINER</classpathContainer>
                        <classpathContainer>org.eclipse.pde.core.requiredPlugins</classpathContainer>
                    </classpathContainers>
                </configuration>
            </plugin>
            
            <!--
                Used to generate OSGI bundles
            -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <!--
                        This will generate the META-INF/MANIFEST.MF in the root
                        for eclipse:eclipse goal
                    -->
                    <manifestLocation>META-INF</manifestLocation>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>commons-lang</groupId>
                <artifactId>commons-lang</artifactId>
                <version>2.6</version>
                <scope>compile</scope>
            </dependency>
        
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.10</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
